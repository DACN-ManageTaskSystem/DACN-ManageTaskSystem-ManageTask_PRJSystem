@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <img src="~/Content/images/logo.png" alt="Logo" class="logo">
            <h2>Hi Welcome Back! 👋</h2>
            <p>Hello again you have been missed!</p>
            <img src="~/Content/images/hinh1.png" alt="Illustration" class="illustration">
            <p>Log in now to manage your projects easily!</p>
        </div>
        <div class="login-right">
            <h2>Log In</h2>
            <form class="login-form" method="post" action="/Home/DangNhap">
                <div class="input-group">
                    <i class="fas fa-user"></i>
                    <input type="text" name="username" placeholder="Username" required />
                </div>
                <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" id="password" placeholder="Password" required />
                    <i class="fas fa-eye" id="togglePassword" style="cursor: pointer; color: #888;"></i>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message" style="color: red; font-size: 14px; margin-top: 5px;">
                        @ViewBag.ErrorMessage
                    </div>
                }
                
                <button type="submit" class="login-btn">Log In</button>
            </form>
            <div class="forgot-pass">
    <a href="@Url.Action("ForgotPassword", "Home")">Forgot your password?</a>
</div>
        </div>
    </div>
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordInput = document.getElementById('password');
            var type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Đổi icon khi hiện/ẩn mật khẩu
            if (type === 'text') {
                this.classList.remove('fa-eye');
                this.classList.add('fa-eye-slash');
            } else {
                this.classList.remove('fa-eye-slash');
                this.classList.add('fa-eye');
            }
        });

    </script>
</body>
</html>

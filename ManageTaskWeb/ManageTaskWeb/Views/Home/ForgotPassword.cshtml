@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <div class="login-container">
        <div class="login-right" style="margin: auto;">
            <h2>Forgot Password</h2>
            <form class="login-form" method="post" action="@Url.Action("ForgotPassword", "Home")">
                <div class="input-group">
                    <i class="fas fa-id-card"></i>
                    <input type="text" name="memberID" placeholder="Member ID" required />
                </div>
                <div class="input-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="email" placeholder="Email" required />
                </div>
                <div class="g-recaptcha" 
                     data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["reCaptcha:SiteKey"]"
                     style="margin: 15px 0;">
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="@(ViewBag.IsError ? "error-message" : "success-message")" 
                         style="color: @(ViewBag.IsError ? "red" : "green"); font-size: 14px; margin-top: 5px;">
                        @ViewBag.Message
                    </div>
                }
                <button type="submit" class="login-btn">Reset Password</button>
            </form>
            <div class="forgot-pass">
                <a href="@Url.Action("DangNhap", "Home")">Back to Login</a>
            </div>
        </div>
    </div>
</body>
</html> 
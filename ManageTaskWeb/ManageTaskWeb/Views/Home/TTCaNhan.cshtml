@{
    ViewBag.Title = "TTCaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Thông tin tài khoản</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="member-page">
        <div class="header">
            <div>
                <a href="/Home/TrangChu"><i class="fas fa-home"></i> Member </a> > <a href="#">Thông tin tài khoản</a>
            </div>
        </div>

        <div class="container">
            <div class="sidebar">
                <a class="active" href="#">
                    <span class="green"></span> Thông tin tài khoản
                </a>
                <a href="#">
                    <span class="yellow"></span> Your Task
                </a>
                <a href="#">
                    <span class="blue"></span> Your Project
                </a>
                <a href="#">
                    <span class="red"></span> Đặt lại mật khẩu
                </a>
                <a href="/Home/Logout">
                    <span class="red"></span> Đăng xuất
                </a>
            </div>
            <div class="content">
                <h2>Thông tin tài khoản</h2>
                <div class="profile-pic">
                    <img alt="User profile picture" height="150" src="~/Content/images/member-img/@Session["ImageMember"]   " width="150" />
                    <button>Chọn ảnh</button>
                    <p>Dung lượng file tối đa 1 MB Định dạng: .JPG, .PNG</p>
                </div>
                <div class="form-group">
                    <label>Họ và tên</label><span>:</span>
                    <input type="text" class="form-control" placeholder="Nhập họ và tên" />
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label><span>:</span>
                    <input type="text" class="form-control" placeholder="Nhập số điện thoại" />
                </div>
                <div class="form-group">
                    <label>Giới tính</label><span>:</span>
                    <select class="form-control" aria-label="Giới tính">
                        <option value="">Giới tính</option>
                        <option value="male">Nam</option>
                        <option value="female">Nữ</option>
                        <option value="other">Khác</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Email</label><span>:</span>
                    <input type="email" class="form-control" placeholder="Nhập email" />
                </div>
                <div class="form-group">
                    <label>Ngày sinh</label><span>:</span>
                    <input type="date" class="form-control" value="2000-01-01" />
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label><span>:</span>
                    <input type="text" class="form-control" placeholder="Nhập địa chỉ" />
                </div>
                <div class="form-group">
                    <label>Nghề nghiệp</label><span>:</span>
                    <input type="text" class="form-control" placeholder="Nhập nghề nghiệp" />
                </div>
                <div class="update-button text-center">
                    <button class="btn btn-warning">Cập nhật</button>
                </div>
                <div class="update-message" style="display:none; color: green;">
                    Cập nhật thành công!
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('.update-button button').addEventListener('click', function () {
            document.querySelector('.update-message').style.display = 'block';
        });
    </script>
</body>
</html>

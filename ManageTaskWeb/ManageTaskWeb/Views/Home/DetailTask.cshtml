        border: none;
        border-top: 1px solid #ddd;
    }

    .date-container {
        display: flex;
        align-items: center;
        font-size: 14px;
        color: #666;
        font-family: Arial, sans-serif;
    }

    .date-text {
        margin-right: 10px;
        line-height: 1.5;
    }

    .double-arrow {
        color: red;
        font-size: 25px;
    }










    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5); /* Màu nền bán trong suốt */

            overflow-y: auto; /* Bật thanh cuộn dọc */
            height: 100vh;
        }
        .notification-container::-webkit-scrollbar {
            width: 8px; /* Độ rộng của thanh cuộn */
        }
        .notification-container::-webkit-scrollbar-track {
             background: #f1f1f1; /* Màu nền của đường dẫn thanh cuộn */
             border-radius: 8px;
        }
            .notification-container::-webkit-scrollbar-thumb {
                background-color: #888; /* Màu thanh cuộn */
                border-radius: 8px;
                border: 2px solid #f1f1f1; /* Khoảng cách giữa thanh cuộn và track */
            }
            .notification-container h1 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }

        .notification, 


        nav .icons {

            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #e0e0e0;
        }

            .notification:last-child {
                border-bottom: none;
            }

            .dot img {
                width: 40px;
                height: 40px;
                border-radius: 50%; /* Đảm bảo ảnh sẽ tròn */
                margin-right:20px
            }
        .content {

        /*Dark Mode*/
        .dark-mode {
            background-color: rgb(27, 26, 28);
            color: white;
        }

            .dark-mode nav,
            .dark-mode .dropdown-menu,
            .dark-mode .selected-option {
                background-color: rgb(27, 26, 28);
                color: white;
            }


            .dark-mode .menu a,
            .dark-mode .icons a,
            .dark-mode .dropdown-item,
            .dark-mode .label-dark {
                color: white;
            }

                .dark-mode .menu a:hover,
                .dark-mode .icons a:hover,
                .dark-mode label:hover {
                    color: #007bff;
                }

        /* Switch styles */
        .switch {
            width: 40px;
            height: 20px;
            background-color: #ccc;
            border-radius: 20px;
            position: relative;
            cursor: pointer;
            display: inline-block;
        }

            .switch::before {
                content: "";
                width: 18px;
                height: 18px;
                background-color: white;
                border-radius: 50%;
                position: absolute;
                top: 1px;
                left: 1px;
                transition: transform 0.3s;
            }

        /* When the checkbox is checked */
        #darkModeToggle:checked + .switch::before {
            transform: translateX(20px);
        }

        #darkModeToggle:checked + .switch {
            background-color: #007bff;
        }
    </style>



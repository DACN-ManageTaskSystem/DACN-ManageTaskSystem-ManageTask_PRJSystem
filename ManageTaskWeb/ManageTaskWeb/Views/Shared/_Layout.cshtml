    <style>
        /* Header styles */
        nav {
            width: 100%;
            height: 60px;
            background-color: #333;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            position: fixed; /* Fixes the navbar at the top */
            top: 0; /* Aligns the navbar to the top of the page */
            left: 0;
            z-index: 1000; /* Ensures navbar is on top */
        }

            nav .logo img {
                height: 40px;
            }

            nav .menu a,
            nav .icons a {
                color: #fff;
                text-decoration: none;
                margin: 0 10px;
                font-size: 18px;
            }

                nav .menu a:hover,
                nav .icons a:hover {
                    color: #ddd;
                }

            nav .icons {
                display: flex;
                align-items: center;
            }

        .dropdown {
            position: relative;
            display: inline-block;
        }

            .dropdown .dropdown-toggle {
                display: flex;
                align-items: center;
                cursor: pointer;
            }


                .dropdown .dropdown-toggle img {
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    margin-right: 8px;
                }

            .dropdown .dropdown-menu {
                display: none;
                position: absolute;
                top: 100%;
                right: 0;
                background-color: #444;
                border-radius: 4px;
                padding: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                z-index: 1001;
            }

            .dropdown:hover .dropdown-menu {
                display: block;
            }

            .dropdown .dropdown-menu a {
                color: #fff;
                text-decoration: none;
                display: block;
                padding: 8px 0;
            }

                .dropdown .dropdown-menu a:hover {
                    color: #ddd;
                }
         /*Notification*/
        .notification-container {
